{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports" : true,
    "sourceMap": true,
    "esModuleInterop" : true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
}